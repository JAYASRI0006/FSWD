export default function FlightBooking() {
  const book = () => {
    const name = prompt("Enter passenger name");
    if (confirm(`Confirm booking for ${name}?`)) {
      alert("Flight Booked Successfully");
    }
  };

  return (
    <>
      <h2>Task 9: Flight Ticket Booking</h2>
      <button onClick={book}>Book Ticket</button>
    </>
  );
}
